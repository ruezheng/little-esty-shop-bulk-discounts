<div class="container">

  <h1>Create a New Discount </h1><br>

  <%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
    <%= f.label :percentage, 'Discount Percentage' %>
    <%= f.number_field :percentage %><br>
    <%= f.label :quantity_threshold, 'Quantity' %>
    <%= f.number_field :quantity_threshold %><br>
    <%= f.submit 'Submit' %>
  <% end %>

</div>
