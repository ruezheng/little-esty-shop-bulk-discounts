<div class="container">

  <h1>Create a New Holiday Discount</h1><br>
  <%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
    <%= f.label :name, params[:name] %>
    <%= f.text_field :name, value: params[:name] %><br>
    <%= f.label :percentage, 'Discount Percentage' %>
    <%= f.number_field :percentage, value: '30' %><br>
    <%= f.label :quantity_threshold, 'Quantity' %>
    <%= f.number_field :quantity_threshold, value: '2' %><br>
    <%= f.submit 'Submit' %>
  <% end %>

</div>
